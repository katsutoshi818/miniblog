<div class="row">
  <%= form_with model: @blog,class: "col, s12", method: :patch do |f| %>
    <div class="row">
      <div class="input-field col s12">
        <div>
          <%= f.text_field :title, placeholder: '題名', style: "width: 20em", value: "#{@blog.title}" %>
        </div>
        <div>
          <%= f.text_area :text, placeholder: '本文', value: "#{@blog.text}", style: "width: 36em; height: 74px;", class: "materialize_textarea" %>
        <div>
      </div>
    </div>
    <%= button_tag type: "submit", class: "waves-effect waves-light btn" do %>
    完了する
    <% end %>
  <% end %>
</div>