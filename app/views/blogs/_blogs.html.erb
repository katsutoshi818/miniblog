      <div class="row">
        <div class="margin">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title ">
              <%= link_to "#{blog.title}", blog_path(blog), class: "white-text" %>
              </span> 
              <p><%= blog.text %></p>
            </div>
            <div class="card-action">
              <% if user_signed_in? && current_user.id == blog.user_id %>
                <%= link_to "編集", edit_blog_path(blog) %>
                <%= link_to "削除", blog_path(blog), method: :delete %>
              <% end %>
              <%= link_to "コメント数：#{blog.comments.count}", blog_path(blog) %>
            </div>
          </div>
        </div>
      </div>